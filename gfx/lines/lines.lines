## Liege ##

line = {
	name = "line_liege"
	
	curvature = 0.6									# 0.0 = flat, 1.0 = perfect semi-circle
	max_height = 20
	fade_in = 0.75
	fade_out = 0.6
	priority = 3
	progress_animation_time = 0.1
	progress_animation_looping = no

		#Fill
		layer = {
		diffuse = "gfx/lines/line_diffuse_07.dds"
		mask = "gfx/lines/line_mask_08.dds"
	
		shader = "standard_alpha_blend_depth"
		priority = 0
		tintcolor = hsv{ 0.08 0.95 0.8		} 		# colour to overlay on texture

		width = { 
			{ zoom_step = 9 value = 2.4		}
			{ zoom_step = 14 value = 4 		}
		}
		
		opacity = { 

			{ zoom_step = 9 value = 0.125 	}
			{ zoom_step = 14 value = 1.0	}
			{ zoom_step = 23 value = 0		}
		}

		mask_uv_scale  = 		{ 0.03 1.0 	}
		uv_scale = 				{ 0.025 1.0 }
		animation_speed = 		{ 0.15 0.0 }		# speed of the UV translation

		}
		
		#Arrow
		layer = {
		diffuse = "gfx/lines/line_diffuse_02.dds"
		mask = "gfx/lines/line_mask_09.dds"

		shader = "standard_alpha_blend_depth"
		priority = 1
		
		tintcolor = hsv{ 0.1 0.95 0.85		} 		# colour to overlay on texture
		width = { 
			{ zoom_step = 9 value = 1.7		}
			{ zoom_step = 14 value = 3		}
		}
		
		opacity = { 

			{ zoom_step = 9 value = 0.240 	}
			{ zoom_step = 14 value = 2 		}
			{ zoom_step = 23 value = 0		}
		}

		mask_uv_scale  = 		{ 0.03 1.0 	}
		uv_scale = 				{ 0.05 1.0	}
		animation_speed = 		{ 0.35 0.0 }		# speed of the UV translation

		}
}

